@model IEnumerable<Order>
@{
    ViewData["Title"] = "Index";
}

<h4>View order list</h4>
<table class="responsive-table">
    <thead>
        <tr>
            <th>Order Date</th>
            <th>Customer Name</th>
            <th>Customer Phone</th>
            <th>Customer Email</th>
            <th>Product Model</th>
            <th>Address</th>
            <th><a asp-action="Create" asp-controller="Order">Add</a></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var o in Model)
        {
            <tr>
                <td>@o.OrderDate.ToString("dd-MM-yyyy")</td>
                <td>@o.CustomerName</td>
                <td>@o.CustomerPhone</td>
                <td>@o.CustomerEmail</td>
                <td>@o.Product.ProductModel</td>
                <td>@o.Address</td>
                <td>
                    <a asp-action="Edit" asp-controller="Order" asp-route-id="@o.OrderId">Edit</a> |
                    <a asp-action="Delete" asp-controller="Order" asp-route-id="@o.OrderId" style="color:red;">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>

