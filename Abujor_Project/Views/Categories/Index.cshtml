@model IEnumerable<Category>
@{
    ViewData["Title"] = "Index";
}

<h1>Categories</h1>

<table class="responsive-table">
    <thead>
        <tr>
            <th>Image</th>
            <th>Category Name</th>
            <th><a asp-action="Create" asp-controller="Categories">Add</a></th>
        </tr>
    </thead>
    <tbody>
        @foreach(var c in Model)
        {
            <tr>
                <td><img src="@c.Image" width="40" /></td>
                <td>@c.CategoryName</td>
                <td>
                    <a asp-action="Edit" asp-controller="Categories" asp-route-id="@c.CategoryId">Edit</a> |
                    <a asp-action="Delete" asp-controller="Categories" asp-route-id="@c.CategoryId" style="color:red;">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>

